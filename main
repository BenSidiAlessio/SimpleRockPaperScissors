import random , sys
#variables for taking player's score count
win = 0
lose = 0
tie = 0

print("Rock Paper Scissors\n")


while True:
    isInputNotRight = True

    while isInputNotRight == True:
        playerMove = input("Enter Your Move:\n r for ROCK \n p for PAPER \n s for SCISSORS \n q for QUIT \n")
        if playerMove == 'q':
            print("thanks for playing...")
            sys.exit()
        elif playerMove != 'r' and playerMove != 'p' and playerMove != 's':
            print("\nWrong input, try again! press r, p, s or q\n\n")
        else:
            isInputNotRight = False

    if(playerMove == 'r'):
        print("ROCK versus...")
    elif(playerMove == 'p'):
        print("PAPER versus...")
    elif(playerMove == 's'):
        print("SCISSORS versus...")

    # generate randomly a number between 1-3 where 1= ROCK 2= PAPER 3=SCISSORS
    randomNum = random.randint(1, 3)

    if(randomNum == 1):
        computerMove = 'r'
    elif(randomNum == 2):
        computerMove = 'p'
    elif(randomNum == 3):
        computerMove = 's'

    if(computerMove == playerMove):
        print("Tie!")
        tie += 1
    elif(computerMove == 'r' and playerMove == 'p'):
        print("player win!")
        win += 1
    elif(computerMove == 'r' and playerMove == 's'):
        print("player lose!")
        lose +1
    elif(computerMove == 'p' and playerMove == 's'):
        print("player win!")
        win += 1
    elif(computerMove == 'p' and playerMove == 'r'):
        print("player lose!")
        lose +=1
    elif (computerMove == 's' and playerMove == 'r'):
        print("player win!")
        win += 1
    elif (computerMove == 's' and playerMove == 'p'):
        print("player lose!")
        lose += 1

    print("\nwin: %s - lost: %s - tie: %s\n" %(win, lose, tie))


